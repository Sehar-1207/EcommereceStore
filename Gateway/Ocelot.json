{
  "Routes": [
    // ================== Authentication Microservice (Port 5002) ================== //
    {
      "UpstreamPathTemplate": "/auth/login",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/Users/login",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/auth/register",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/Users/register",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/Users/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },

    // ================== Product Catalogue Microservice (Port 5001) ================== //
    {
      "UpstreamPathTemplate": "/catalogue/{everything}",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "FileCacheOptions": {
        "TtlSeconds": 60,
        "Region": "CatalogueCache"
      }
    },
    {
      "UpstreamPathTemplate": "/catalogue/{everything}",
      "UpstreamHttpMethod": [ "POST", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5003",
    "DownstreamHttpHandlerOptions": {
      "DangerousAcceptAnyServerCertificateValidator": true
    },
    "RequestIdKey": "OcRequestId"
  }
}